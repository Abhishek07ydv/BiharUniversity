<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/branchespic"
    android:fillViewport="true"
    tools:context=".branches">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/btncse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#1437F4"
            android:text="CSE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btnece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1437F4"
            android:text="ECE"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
           />

    <Button
        android:id="@+id/btneee"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1437F4"
        android:text="EEE"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:layout_marginTop="28sp"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btnmechenics"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#1437F4"
        android:layout_marginTop="28sp"
        android:layout_gravity="center"
        android:text="MACHENICS"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
        />

    <Button
        android:id="@+id/btncivil"
        android:layout_width="match_parent"
        android:layout_marginTop="28sp"
        android:layout_gravity="center"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:backgroundTint="#1437F4"
        android:text="CIVIL"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="30sp"
       />
        <Button
            android:id="@+id/btnee"
            android:layout_width="match_parent"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#1437F4"
            android:text="EE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btnit"
            android:layout_width="match_parent"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#1437F4"
            android:text="IT"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />

    </LinearLayout>

</ScrollView>

