<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Btech4thsemee"
    android:background="@drawable/eepic"
    android:fitsSystemWindows="true"
    android:fillViewport="true">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">



        <Button
            android:id="@+id/btn4thsemsyllbusee"
            android:backgroundTint="#1437F4"
            android:text="syllabus"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center" />

        <Button
            android:id="@+id/btn4thsemprevquesee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:backgroundTint="#1437F4"
            android:text="previous question"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn4thsemnoteee"
            android:backgroundTint="#1437F4"
            android:text="notes"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"/>

        <Button

            android:id="@+id/btn4thsemorganizee"
            android:backgroundTint="#1437F4"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:text="organiser"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24sp"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center" />
    </LinearLayout>
</ScrollView>