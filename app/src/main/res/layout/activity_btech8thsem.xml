<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/csepic"
    android:fillViewport="true"
    tools:context=".Btech8thsem">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <Button
            android:id="@+id/btn8thsemsyllbus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="24sp"
            android:text="SYLLABUS"
            android:textAlignment="center"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            />

        <Button
            android:id="@+id/btn8thsempreviques"
            android:text="PREVIOUS QUESTION"
            android:textColor="@color/white"
            android:backgroundTint="#1437F4"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="28sp"
            android:layout_gravity="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="24sp"
            />

        <Button
            android:id="@+id/btn8thsemnotes"
            android:text="NOTES"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:backgroundTint="#1437F4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="24sp" />

        <Button
            android:id="@+id/btn8thsemorganiser"
            android:text="ORGANISER"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:backgroundTint="#1437F4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="24sp"
            />

    </LinearLayout>
</ScrollView>