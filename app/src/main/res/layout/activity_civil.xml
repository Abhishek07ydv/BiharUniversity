<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/civilpic"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".civil">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/civilbtn1stsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:text="1st semester"
            android:textAlignment="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp"
            />

        <Button
            android:id="@+id/civilbtn2ndsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="2nd semester"
            android:textAlignment="center"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp" />
        <Button
            android:id="@+id/civilbtn3rdsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="3rd semester"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:backgroundTint="#1437F4"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp"/>

        <Button
            android:id="@+id/civilbtn4thsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4th semester"
            android:textAlignment="center"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp" />

        <Button
            android:id="@+id/civilbtn5thsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="5th semester"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp" />

        <Button
            android:id="@+id/civilbtn6thsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:text="6th semester"
            android:textAlignment="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp" />

        <Button
            android:id="@+id/civilbtn7thsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="7th semester"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp" />

        <Button
            android:id="@+id/civilbtn8thsem"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="8th semester"
            android:backgroundTint="#1437F4"
            android:textColor="@color/white"
            android:textAlignment="center"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textSize="30sp"
            android:layout_gravity="center"
            android:layout_marginTop="24sp" />


    </LinearLayout>
</ScrollView>