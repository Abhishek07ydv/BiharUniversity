<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/branchespic"
    android:fillViewport="true"
    tools:context=".IITbtechbranches">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/btniitcse"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#1437F4"
            android:text="CSE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btniitece"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1437F4"
            android:text="ECE"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            />

        <Button
            android:id="@+id/btniiteee"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1437F4"
            android:text="EEE"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btniitmechenics"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#1437F4"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            android:text="MACHENICS"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />

        <Button
            android:id="@+id/btniitcivil"
            android:layout_width="match_parent"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#1437F4"
            android:text="CIVIL"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />
        <Button
            android:id="@+id/btniitee"
            android:layout_width="match_parent"
            android:layout_marginTop="28sp"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:layout_marginStart="30sp"
            android:layout_marginEnd="30sp"
            android:backgroundTint="#1437F4"
            android:text="EE"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="30sp"
            />

    </LinearLayout>

</ScrollView>

