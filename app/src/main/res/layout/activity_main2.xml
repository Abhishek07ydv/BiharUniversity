<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity2">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#1437F4"
        android:shadowColor="#E43A3A"
        android:text="Bihar University"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="35sp"
        />



    <ImageButton
        android:id="@+id/btn"
        android:layout_width="156dp"
        android:layout_height="125dp"
        android:background="@drawable/aku"
        android:layout_marginTop="24sp"
        android:layout_gravity="center"/>
    <TextView
        android:id="@+id/textView2"
        android:layout_width="140dp"
        android:layout_height="36dp"
        android:text="AKU"
        android:textAlignment="center"
        android:textColor="#5972FB"
        android:textSize="30sp"
        android:layout_gravity="center"
        />


    <ImageButton
        android:id="@+id/btn1"
        android:layout_width="154sp"
        android:layout_height="129sp"
        android:background="@drawable/indianinstituteoftechnology"
     android:layout_marginTop="24sp"
        android:layout_gravity="center"/>

    <TextView
        android:id="@+id/textView5"
        android:layout_width="158sp"
        android:layout_height="33sp"
        android:text="   IIT Patna"
        android:textColor="#5972FB"
        android:textSize="30sp"
       android:layout_gravity="center" />
</LinearLayout>

</ScrollView>